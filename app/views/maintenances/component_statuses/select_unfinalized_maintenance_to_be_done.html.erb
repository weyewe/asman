
<div class="span9 content">
  <%= create_guide("Maintenance Result Data Entry", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Pending Maintenance: <b>#{current_office.pending_execution_maintenances.count}</b>"      ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            
            <th>Client</th>
            <th>Machine</th>
            <th>Asset No</th>
            <th>Work Order</th>
            <th>Creation Date</th>
            <th>Is Done?</th>
          </tr>
        </thead>
        <tbody>
          <% current_office.pending_execution_maintenances.each do |maintenance| %>
            <tr>
              
              <td><%= maintenance.asset.client.name  %></td>
              <td><%= maintenance.asset.machine.model_name %></td>
              <td><%= maintenance.asset.asset_no  %></td>
              <td><%= link_to maintenance.work_order_no, component_status_data_entry_for_maintenance_url(maintenance)  %></td>
              <td><%= maintenance.created_at %></td>
              <td>
                <% if maintenance.is_finalized == true %>
                <span class="label label-success">Done</span>
                <% else %>
                <span class="label">Pending</span>
                <% end %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















