$(document).ready(function(){
  // update the modal
  
  <% if @result.nil? %>
    <% new_row = escape_javascript(  render :partial => "components/fail_to_update", :locals => {
              :price => @price,
              :part_code => @part_code
            }) %>
  <% else %>
    <% new_row = escape_javascript(  render :partial => "components/update_successful", :locals => {
              :price => @price,
              :part_code => @part_code
            }) %>
  <% end %>
  
  $("#modal_notification").replaceWith('<%= new_row %>').show();
  $("#edit_form").hide();
  
  
  // update the display data
  <% new_row = escape_javascript( render :partial => "components/component_entry", :locals => {
    :component => @component
  }) %>
  
  $("#component_entry-<%= @component.id %>").replaceWith('<%= new_row %>');
});
