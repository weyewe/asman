
<div class="span9 content">
  <%= create_guide("Create Spare Part", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Machine: <b>#{@machine.model_name}</b>" + "<br />"    +  
        "Total Components: <b>#{@components.count}</b>"      ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Component</th>
            <th>Category</th>
            <th>Total Compatible Spare Part</th>
            <th>Spare Part in the same Category</th>
          </tr>
        </thead>
        <tbody>
          <% @components.each do |component| %>
            <tr>
              <td><%=  link_to component.name  , new_component_spare_part_url(component) %></td>
              <td><%= component.component_category.name %></td>
              <td><%= component.active_spare_parts.count  %></td>
              <td><%= component.component_category.active_spare_parts.count  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















