
<div class="span9 content">
  <%= create_guide("Create Machine", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Machine Categories: <b>#{current_office.machine_categories.count}</b>"      ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Kategori</th>
            <th>Total Mesin</th>
            <th>Total Asset</th>
          </tr>
        </thead>
        <tbody>
          <% @machine_categories.each do |machine_category| %>
            <tr>
              <td><%= link_to machine_category.name, new_machine_category_machine_url(machine_category)  %></td>
              <td><%= machine_category.machines.count %></td>
              <td><%= machine_category.assets.count %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















