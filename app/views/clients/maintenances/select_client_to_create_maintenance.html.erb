
<div class="span9 content">
  <%= create_guide("Create Maintenance", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Clients: <b>#{current_office.clients.count}</b>"     ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Client</th>
            <th>Total Asset</th>
            <th>Total Maintenances</th>
            <th>Completed</th>
            <th>Paid</th>
            <th>In Progress</th>
          </tr>
        </thead>
        <tbody>
          <% current_office.clients.each do |client| %>
            <tr>
              <td><%= link_to client.name, select_asset_to_create_maintenance_url(client) %></td>
              <td><%= client.assets.count  %></td>
              <td><%= Maintenance.all_maintenances(client).count  %></td>
              <td><%= Maintenance.completed_maintenances(client).count  %></td>
              <td><%= Maintenance.paid_maintenances(client).count  %></td>
              <td><%= Maintenance.in_progress_maintenances(client).count  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















