
<div class="span9 content">
  <%= create_guide("Register Client", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Clients: <b>#{current_office.clients.count}</b>"     ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Well done!</strong> <%= flash[:notice].html_safe %>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="alert alert-error">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Create Failure!</strong> Please fill in all fields.
    </div>
  <% end %>
  
  
  <div class="row-fluid">
    <div class="span12">
      
      <h2>New Client</h2><br />

      <%= simple_form_for(@new_client, :html => {:class => 'form-horizontal prevent_double_submit' }) do |f| %>
        <!-- t.string :name
          t.string :contact_person
          t.string :phone_number
          t.string :blackberry_pin
          t.string :email 
          t.string :address -->
        
        
       
         <%= f.input :name , :input_html => {:class => "input-xlarge span5"}, 
          :label => "Name" , :hint => "Nama Client"%>

         <%= f.input :contact_person, :input_html => {:class => "input-xlarge span5"},
         :label => "PIC", :hint => "Nama PIC Yang Bertanggung Jawab"%>



         <%= f.input :phone_number, :input_html => { :class => "input-xlarge span5" },
         :hint => "Nomor Telepon, bisa HP, kantor, etc", :label => "Phone Number" %>
         
         <%= f.input :blackberry_pin, :input_html => { :class => "input-xlarge span5" },
          :hint => "Pin BB PIC", :label => "Pin BB" %>


         <%= f.input :address, :input_html => {:rows => 5, :class => "input-xlarge span5" },
               :label => "Alamat Lengkap", :hint => "Lokasi Client dan Asset", :as => :text %>
         

        <div class="form-actions">
          <%= f.button :submit , :class => "btn btn-primary", :text=> "Create Component" %>
        </div>
      <% end %>
      
      
     
      
    </div> 
      
      
      
    
  </div><!--/row-->
   <hr />
  <div class="row-fluid">
    <div id="data_list">
      <h2>Total Clients: <%= current_office.clients.count  %> </h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Nama</th>
            <th>PIC</th>
            <th>Phone</th>
            <th>PIN BB</th>
            <th>Email</th>
            <th>Address</th>
            <th>Asset</th>
          </tr>
        </thead>
        <tbody>
          <% current_office.clients.each do |client| %>
          <!-- t.string :name
            t.string :contact_person
            t.string :phone_number
            t.string :blackberry_pin
            t.string :email 
            t.string :address -->
            <tr>
              <td><%= client.name  %></td>
              <td><%= client.contact_person  %></td>
              <td><%= client.phone_number  %></td>
              <td><%= client.blackberry_pin  %></td>
              <td><%= client.email  %></td>
              <td><%= client.address  %></td>
              <td><%= client.assets.count  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















