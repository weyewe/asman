<% error_array = [] %>
<% if @new_component_category_name.nil? or @new_component_category_name.length == 0%>
  <% error_array << "Component Category can't be empty"%>
<% end %>

<% if @component_category.has_duplicate_component_category_in_the_office?( @new_component_category_name,    
            current_user.active_job_attachment.office  ) %>
  <% error_array << "There is duplicate Component Category"%>
<% end %>


<div id="modal_notification">

<table cellpadding="0" cellspacing="0" border="0" 
      class="table table-striped table-bordered" id="example">
  <thead>
    <tr><th  style="text-align:center;">Update FAIL</th></tr>
  </thead>
  <tbody>
    
    <% error_array.each do |x| %>
    <tr>
      <td>
        <%= x.html_safe %>
      </td>
    </tr>
    <% end %>
    
  
  </tbody>
</table>
</div>