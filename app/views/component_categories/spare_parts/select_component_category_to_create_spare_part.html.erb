
<div class="span9 content">
  <%= create_guide("Create Spare Part", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Component Categories: <b>#{@component_categories.count}</b>"      ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Component Category</th>
            <th>Total Component</th>
            <th>Total Spare Part</th>
          </tr>
        </thead>
        <tbody>
          <% @component_categories.each do |component_category| %>
            <tr>
              <td><%=  component_category.name   %></td>
              <td><%= component_category.active_components.count %></td>
              <td><%= component_category.active_spare_parts.count %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















