
<div class="span9 content">
  <%= create_guide("Create Maintenance", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +
        "Client: <b>#{@client.name}</b>" + "<br />"    +   
        "Total Assets: <b>#{@client.assets.count}</b>"     ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Machine</th>
            <th>Asset No</th>
            <th>Total Maintenance</th>
          </tr>
        </thead>
        <tbody>
          <% @client.assets.each do |asset| %>
            <tr>
              <td><%= asset.machine.model_name %></td>
              <td><%= link_to asset.asset_no , new_maintenance_for_asset_url(asset)%></td>
              <td><%= asset.maintenances.count  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















