
<div class="span9 content">
  <%= create_guide("Create Spare Part", 
        "Select Machine to Create and Assign Spare Part" + "<br />"  + 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Machine: <b>#{@machines.count}</b>"      ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Component Category</th>
            <th>Total Component</th>
          </tr>
        </thead>
        <tbody>
          <% @machines.each do |machine| %>
            <tr>
              <td><%= link_to machine.model_name, select_component_to_create_and_assign_spare_part_url(machine)   %></td>
              <td><%= machine.components.count %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















