
<div class="span9 content">
  <%= create_guide("Create Component", 
        "Office: <b>#{current_office.name}</b>" + "<br />"    +  
        "Total Machine: <b>#{current_office.machines.count}</b>"      ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
 
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Kategori</th>
            <th>Model Mesin</th>
            <th>Total Component</th>
            <th>Total Asset</th>
          </tr>
        </thead>
        <tbody>
          <% @machines.each do |machine| %>
            <tr>
              <td><%= machine.machine_category.name %></td>
              <td><%= link_to machine.model_name, new_machine_component_url( machine )%></td>
              <td><%= machine.components.count  %></td>
              <td><%= machine.assets.count  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















